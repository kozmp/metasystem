---
/**
 * @fileoverview Strona główna KOSSECKI METASYSTEM (KMS)
 * @cybernetic Efektor - minimalistyczny punkt wejścia
 */
import Layout from '../layouts/Layout.astro';
---

<Layout 
	title="KOSSECKI METASYSTEM"
	description="System analityczny oparty na Metacybernetyce"
>
	<div class="landing-container">
		<div class="landing-content">
			<!-- Logo/Tytuł -->
			<div class="logo-section">
				<h1 class="main-title">
					<span class="title-line-1">KOSSECKI</span>
					<span class="title-line-2">METASYSTEM</span>
				</h1>
			</div>

			<!-- Krótki opis -->
			<div class="description">
				<p class="lead-text">
					System analityczny oparty na teorii cybernetycznej<br/>
					doc. Józefa Kosseckiego
				</p>
			</div>

			<!-- Główny CTA -->
			<div class="cta-section">
				<a href="/dashboard" class="btn-primary">
					Przejdź do Panelu
				</a>
			</div>

			<!-- Footer -->
			<div class="footer-info">
				<p>Metacybernetyka 2015</p>
			</div>
		</div>
	</div>
</Layout>

<style>
	.landing-container {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
		background: 
			radial-gradient(circle at 50% 50%, rgba(102, 126, 234, 0.08), transparent 70%),
			#0a0a0a;
		position: relative;
		overflow: hidden;
	}

	/* Subtle animated background */
	.landing-container::before {
		content: '';
		position: absolute;
		top: -50%;
		left: -50%;
		width: 200%;
		height: 200%;
		background: 
			radial-gradient(circle, rgba(102, 126, 234, 0.03) 1px, transparent 1px);
		background-size: 50px 50px;
		animation: gridMove 20s linear infinite;
		pointer-events: none;
	}

	@keyframes gridMove {
		0% {
			transform: translate(0, 0);
		}
		100% {
			transform: translate(50px, 50px);
		}
	}

	.landing-content {
		max-width: 600px;
		width: 100%;
		text-align: center;
		position: relative;
		z-index: 1;
	}

	/* Logo/Tytuł */
	.logo-section {
		margin-bottom: 2rem;
	}

	.main-title {
		font-size: clamp(3rem, 10vw, 6rem);
		font-weight: 700;
		line-height: 0.95;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 0;
		letter-spacing: -0.02em;
	}

	.title-line-1 {
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		animation: fadeInDown 0.8s ease-out;
	}

	.title-line-2 {
		background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		animation: fadeInDown 0.8s ease-out 0.2s both;
	}

	@keyframes fadeInDown {
		from {
			opacity: 0;
			transform: translateY(-20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Opis */
	.description {
		margin: 3rem 0;
		animation: fadeIn 1s ease-out 0.5s both;
	}

	.lead-text {
		font-size: 1.125rem;
		line-height: 1.8;
		color: #9ca3af;
		margin: 0;
		font-weight: 300;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	/* CTA Button */
	.cta-section {
		margin: 3rem 0;
		animation: fadeInUp 1s ease-out 0.7s both;
	}

	.btn-primary {
		display: inline-block;
		padding: 1.25rem 3rem;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		text-decoration: none;
		font-weight: 600;
		font-size: 1.125rem;
		border-radius: 12px;
		transition: all 0.3s ease;
		box-shadow: 
			0 4px 20px rgba(102, 126, 234, 0.3),
			0 0 0 0 rgba(102, 126, 234, 0.5);
		position: relative;
		overflow: hidden;
	}

	.btn-primary::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
		transition: left 0.5s ease;
	}

	.btn-primary:hover {
		transform: translateY(-2px);
		box-shadow: 
			0 8px 30px rgba(102, 126, 234, 0.5),
			0 0 0 8px rgba(102, 126, 234, 0.1);
	}

	.btn-primary:hover::before {
		left: 100%;
	}

	.btn-primary:active {
		transform: translateY(0);
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Footer */
	.footer-info {
		margin-top: 4rem;
		padding-top: 2rem;
		border-top: 1px solid rgba(255, 255, 255, 0.05);
		animation: fadeIn 1.2s ease-out 1s both;
	}

	.footer-info p {
		font-size: 0.875rem;
		color: #6b7280;
		margin: 0;
		font-weight: 300;
		letter-spacing: 0.05em;
	}

	/* Responsywność */
	@media (max-width: 768px) {
		.landing-container {
			padding: 1.5rem;
		}

		.main-title {
			font-size: clamp(2.5rem, 12vw, 4rem);
		}

		.lead-text {
			font-size: 1rem;
		}

		.btn-primary {
			padding: 1rem 2rem;
			font-size: 1rem;
			width: 100%;
		}

		.description {
			margin: 2rem 0;
		}

		.cta-section {
			margin: 2rem 0;
		}

		.footer-info {
			margin-top: 3rem;
		}
	}

	@media (max-width: 480px) {
		.landing-container {
			padding: 1rem;
		}

		.main-title {
			gap: 0.25rem;
		}

		.lead-text br {
			display: none;
		}
	}
</style>
