---
/**
 * @fileoverview TEST PAGE: Gemini Video Analyzer
 * @cybernetic Strona testowa dla analizy wideo
 */
import Layout from '../layouts/Layout.astro';
import { VideoAnalyzer } from '../components/cybernetics/VideoAnalyzer';
---

<Layout title="Analiza Wideo - Gemini">
  <main class="min-h-screen bg-slate-900 py-12">
    <div class="container mx-auto px-4">
      <header class="text-center mb-12">
        <h1 class="text-4xl font-bold text-white mb-4">
          KOSSECKI METASYSTEM
        </h1>
        <p class="text-xl text-slate-300">
          Multimodalna Analiza Wideo (Gemini 1.5 Pro)
        </p>
        <p class="text-sm text-slate-400 mt-2">
          Zgodna z Metacybernetyką 2015 - doc. Józef Kossecki
        </p>
      </header>

      <VideoAnalyzer client:load />

      <footer class="mt-12 text-center text-slate-500 text-sm">
        <p>
          <strong>METAPROMPT 2015:</strong> Analiza zgodna z 8 aksjomatami teorii poznania
        </p>
        <p class="mt-2">
          P = v × a × c | Z = I_in / I_real | Klasyfikacja: Latin/Byzantine/Turandot
        </p>
      </footer>
    </div>
  </main>
</Layout>

