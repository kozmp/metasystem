 * 
 * Zgodnie z MetacybernetykƒÖ 2015:
 * Transparentno≈õƒá systemu - u≈ºytkownik musi widzieƒá co AI pr√≥bowa≈Ço zrobiƒá.
 */

import Layout from '../../layouts/Layout.astro';
import { supabase } from '../../lib/supabase/client';

// Pobierz ostatnie zdarzenia bezpiecze≈Ñstwa
const { data: securityEvents, error: eventsError } = await supabase
  .from('system_alerts')
  .select('*')
  .not('operation_type', 'is', null)
  .order('created_at', { ascending: false })
  .limit(50);

// Pobierz statystyki (ostatnie 7 dni)
const dateFrom = new Date();
dateFrom.setDate(dateFrom.getDate() - 7);

const { data: statsData, error: statsError } = await supabase
  .from('system_alerts')
  .select('blocked_by_security, user_confirmed, severity')
  .not('operation_type', 'is', null)
  .gte('created_at', dateFrom.toISOString());

// Oblicz statystyki
const stats = statsData ? {
  total: statsData.length,
  blocked: statsData.filter(e => e.blocked_by_security).length,
  confirmed: statsData.filter(e => e.user_confirmed === true).length,
  rejected: statsData.filter(e => e.user_confirmed === false).length,
  critical: statsData.filter(e => e.severity >= 0.8).length,
} : null;

// Mapowanie severity (float) na label
function getSeverityLabel(severity: number): string {
  if (severity >= 0.8) return 'CRITICAL';
  if (severity >= 0.6) return 'HIGH';
  if (severity >= 0.4) return 'MEDIUM';
  return 'LOW';
}

// Mapowanie severity na kolor
function getSeverityColor(severity: number): string {
  if (severity >= 0.8) return 'bg-red-100 text-red-800 border-red-300';
  if (severity >= 0.6) return 'bg-orange-100 text-orange-800 border-orange-300';
  if (severity >= 0.4) return 'bg-yellow-100 text-yellow-800 border-yellow-300';
  return 'bg-blue-100 text-blue-800 border-blue-300';
}

// Mapowanie decyzji na emoji
function getDecisionEmoji(event: any): string {
  if (event.blocked_by_security) return 'üö´';
  if (event.user_confirmed === true) return '‚úì';
  if (event.user_confirmed === false) return '‚úó';
  return '‚úì';
}

// Mapowanie decyzji na label
function getDecisionLabel(event: any): string {
  if (event.blocked_by_security) return 'ZABLOKOWANO';
  if (event.user_confirmed === true) return 'POTWIERDZONO';
  if (event.user_confirmed === false) return 'ODRZUCONO';
  return 'DOZWOLONO';
}
